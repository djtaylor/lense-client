#!/bin/bash
# CloudScape Common Libraries: Post-installation Script

# Profile source / destination
PROFILE_SRC="/opt/cloudscape/_local/etc/profile.d/cloudscape.sh"
PROFILE_DST="/etc/profile.d/cloudscape.sh"

# Environment profile script
if [ ! -f $PROFILE_DST ]; then
	ln -s $PROFILE_SRC $PROFILE_DST
else
	echo -e "File '$PROFILE_DST' already exists, skipping deployment"
fi

exit 0