{
	"base": "lense.client.module",
	"modules": [
	    {
	    	"id": "user",
		    "module": "user",
		    "class": "ModUser",
		    "desc": "Manage Lense users."
	    },
	    {
	    	"id": "group",
	    	"module": "group",
	    	"class": "ModGroup",
	    	"desc": "Manage Lense groups."
	    },
	    {
	    	"id": "gateway",
	    	"module": "gateway",
	    	"class": "ModGateway",
	    	"desc": "Manage Lense authentication."
	    },
	   	{
	   		"id": "connector",
	   		"module": "connector",
	   		"class": "ModConnector",
	   		"desc": "Manage Lense API connectors."
	   	},
	   	{
	   		"id": "integrator",
	   		"module": "integrator",
	   		"class": "ModIntegrator",
	   		"desc": "Manage Lense API integrators"
	   	}
	],
	"args": [
	    {
    		"id": "api_user",
    		"short": "-u",
    		"long": "--api-user",
    		"help": "The API user to authenticate with if not set as the environment variable 'LENSE_API_USER'",
    		"action": "append"
    	},
    	{
    		"id": "api_group",
    		"short": "-g",
    		"long": "--api-group",
    		"help": "The API user group to authenticate with if not set as the environment variable 'LENSE_API_GROUP'",
    		"action": "append"
    	},
    	{
    		"id": "api_key",
    		"short": "-k",
    		"long": "--api-key",
    		"help": "The API key to authenticate with if not set as the environment variable 'LENSE_API_KEY'",
    		"action": "append"
    	},
    	{
    		"id": "api_data",
    		"short": "-d",
    		"long": "--api-data",
    		"help": "Optional data to pass during the API request, must be a valid JSON string",
    		"action": "append"
    	},
    	{
    		"id": "list",
    		"short": "-l",
    		"long": "--list",
    		"help": "Show supported actions for a specified module",
    		"action": "store_true"
    	}
	]
}